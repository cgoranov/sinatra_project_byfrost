<h2>Vendor Database</h2>
<table>
    <tr>
        <th>Vendor Name</th>
        <th>Edit Vendor</th>
    </tr>
        <%if !@vendors.empty?%>
            <%@vendors.each do |v|%>
    <tr>
        <td>
            <%=v.name.capitalize%>
        </td>
        <td>
            <a href="/vendors/<%=v.id%>/edit">edit</a> or 
            <form method="post" action="/vendors/<%=v.id%>">
                <input id="hidden" type="hidden" name="_method" value="DELETE">
                <input type="submit" value="Delete">
            </form>
        </td>
    </tr>
            <%end%>
        <%else%>
        <br>
        <%="No Vendors in database. Make a new purchase order to add a Vendor!"%>
        <%end%>
</table>